<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contact.ContactAdd_UpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_name_warning"
            android:textColor="#FF0000"/>

        <EditText
            android:background="@drawable/register_edit_text_background"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:ems="10"
            android:hint="Username"
            tools:ignore="HardcodedText"
            android:importantForAutofill="no"
            android:padding="6dp"
            android:id="@+id/contact_input_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_phone_warning"
            android:textColor="#FF0000"/>

        <EditText
            android:id="@+id/contact_input_phone"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/register_edit_text_background"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:hint="@string/phone_num"
            android:importantForAutofill="no"
            android:inputType="text|phone"
            android:padding="6dp" />

        <Button
            app:backgroundTint="@null"
            android:background="@drawable/custom_menu_button"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:id="@+id/contact_input_confirm"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>