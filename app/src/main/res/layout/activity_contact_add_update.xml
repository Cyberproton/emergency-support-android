<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comfort_background"
    tools:context=".contact.ContactAdd_UpdateActivity">

    <TextView
        android:id="@+id/contact_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="THÊM SỐ "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="64dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contact_add_title">

        <TextView
            android:id="@+id/input_name_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000" />

        <EditText
            android:id="@+id/contact_input_name"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/register_edit_text_background"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:ems="10"
            android:hint="Tên"
            android:importantForAutofill="no"
            android:padding="6dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/input_phone_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000" />

        <EditText
            android:id="@+id/contact_input_phone"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/register_edit_text_background"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:hint="@string/phone_num"
            android:importantForAutofill="no"
            android:inputType="text|phone"
            android:padding="6dp" />

        <Button
            android:id="@+id/contact_input_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_menu_button"
            android:text="Xác nhận"
            app:backgroundTint="@null" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>